{
  "name": "onestack",
  "description": "OneStack Enterprise Server Platform",
  "author": "Ling",
  "version": "2.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:e2tox/onestack.git"
  },
  "engines": {
    "node": ">=4.0.0",
    "npm": ">=2.0.0"
  },
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "start": "NODE_ENV=test node_modules/.bin/nodemon --config task/testmon.json && exit 0",
    "test": "npm run lint && npm run build && npm run test:coverage",
    "cov": "npm run test:coverage",
    "test:unit": "node_modules/.bin/ts-node task/jasmine.ts",
    "test:coverage": "node_modules/.bin/ts-node node_modules/.bin/istanbul cover --config=task/istanbul.yml node_modules/.bin/jasmine JASMINE_CONFIG_PATH=task/jasmine.full.json",
    "lint": "standard --pretty",
    "build": "npm run build:clean && npm run build:tsc",
    "build:clean": "rm -rf ./lib",
    "build:tsc": "node_modules/.bin/tsc -p tsconfig.release.json",
    "build:webpack": "node_modules/.bin/webpack --config task/webpack.config.ts",
    "test-on-travis": "npm run lint && npm run test:coverage",
    "test-on-teamcity": "exit 1"
  },
  "dependencies": {
    "reflect-metadata": "latest",
    "require-yaml": "latest",
    "ws": "latest"
  },
  "devDependencies": {
    "@types/jasmine": "latest",
    "@types/node": "latest",
    "@types/webpack": "latest",
    "@types/ws": "latest",
    "istanbul": "next",
    "jasmine": "latest",
    "jasmine-spec-reporter": "latest",
    "nodemon": "latest",
    "ts-loader": "latest",
    "ts-node": "latest",
    "typescript": "latest",
    "typescript-standard": "latest",
    "webpack": "beta"
  }
}
